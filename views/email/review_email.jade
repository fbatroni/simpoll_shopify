!!! 5
html
  head
    meta(charset='utf-8')
  body
    form(method='post', action='http://localhost:3000/rev')
      table(style='border-bottom: 1px solid #222; width: 100%; margin: 0 auto; border-collapse: collapse; font-family: Arial, sans-serif;')
        thead
          tr
            td(colspan='3', style='border-top-left-radius: 4px; border-top-right-radius: 4px; background-color: #444; color: #fff; border-right: 1px solid #444; padding: 0.5em; padding-left: 2em;')
              a(href='#', style='color: #fff; text-decoration: none; font-size: 0.9em;') Web version
              | -
              a(href='#', style='color: #fff; text-decoration: none; font-size: 0.9em;') Unsubscribe
          tr
            td(style='border: 1px solid #0088cc; text-align: center; padding-top: 2em; padding-bottom: 2em; background-color: #0088cc; color: #f5f5f5;', colspan='3')
              img(src='cid:SIMPOL_BRAND')
        tbody
          tr
            td(style='padding: 2.3em; padding-bottom: 0.5em; border-left: 1px solid #0088cc; border-right: 1px solid #0088cc;', colspan='3')
              h4(style='margin-top: 0; margin-bottom: 1em;') Hi #{orderInfo.customer.firstName},
              p(style='line-height: 1.8em; margin-bottom: 0;')
                | #{orderInfo.emailBody}
          tr
            td(colspan='3', style='padding: 2.3em; padding-bottom: 0; border-left: 1px solid #0088cc; border-right: 1px solid #0088cc;')
              table(style='width: 100%; border-collapse: collapse;')
                each product in orderInfo.products
                  tr(style='')
                    td(style='width: 20%; text-align: left; padding-bottom: 2em;')
                      img(src='#{product.imageUrl}', style='width: 100px; border-radius: 2px;', title='#{product.name}')
                    td(style='text-align: center; padding-bottom: 2em; width: 15%;')
                      label(for='product-#{product.id}-rocks')
                        img(src='cid:SMILEY_IMAGE')
                        br
                      input(name='product-#{product.id}-emotion', type='radio', value='rocks', id='product-#{product.id}-rocks')
                    td(style='text-align: center; padding-bottom: 2em; width: 15%;')
                      label(for='product-#{product.id}-sucks')
                        img(src='cid:FROWNY_IMAGE')
                        br
                      input(name='product-#{product.id}-emotion', type='radio', value='rocks', id='product-#{product.id}-sucks')
                    td(style='text-align: center; padding-bottom: 2em;')
                      input(size='25', name='product-#{product.id}-comment', type='text', placeholder='What did you like / dislike?', style='border: 1px solid #bbb; border-radius: 4px; padding: 0.5em; font-size: 1.2em; position: relative; bottom: 13px;')
          tr
            td(style='padding: 0 2.3em 0.5em 2.3em; text-align: center; border-left: 1px solid #0088cc; border-right: 1px solid #0088cc;', colspan='3')
              input(type='submit', name='submit-review', value='Submit your review', style='border: 1px solid #6C7E0E; background-color: #6C7E0E; color: #fff; border-radius: 0px; width: 100%; padding: 0.3em; font-size: 1.5em; cursor: pointer;')
        tfoot
          tr
            td(style='border: 0px solid #0088cc; padding: 0 2.3em 0.5em 2.3em; border-left: 1px solid #0088cc; border-right: 1px solid #0088cc;', colspan='3')
              p(style='line-height: 1.8em;')
                | #{orderInfo.emailSignature}

          tr(style='border-top-left-radius: 4px; border-top-right-radius: 4px; background-color: #222; color: #fff; border-right: 1px solid #222; padding-left: 2em;')
            td(colspan='3', style='padding: 2em 3em;')
              p(style='line-height: 1.3em; font-size: 0.9em;')
                | You are receiving this email because you
                br
                | recently made a purchase at #{orderInfo.shop}
              a(href='#', style='color: #0088cc; text-decoration: none; font-size: 0.9em;') Unsubscribe
