extends layout

block content
  .container
    include header
    .row.signup
      .col-lg-12
        h1(style='text-align: center; color: #16AD1C;') You're a click away.
      .col-lg-12
        form(role='form', action='/signup', method='post')
          .form-group
            input.form-control(type='text', name='shop', placeholder='Shop Name eg.Shoeshop7 i.e. without "myshopify.com"')
          .form-group
            input.form-control(type='password', name='password', placeholder='Choose a password')
          .form-group
            input.form-control(type='password', name='confirm', placeholder='Confirm your password')
          button.btn.btn-success.btn-block(type='submit') Signup
